<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sample_app.sample_app_up_case"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <li><%= link_to t("about"), about_path %></li>
        <li><%= link_to t("sign_up"), signup_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users"), current_user %></li>
          <li class="dropdown">
            <%= link_to root_path, id: "setupdrop", data:{toggle: "dropdown"}, class: "dropdown-toggle" do %>
              <%= t("account") %>
              <b class="caret"></b>
                 <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
